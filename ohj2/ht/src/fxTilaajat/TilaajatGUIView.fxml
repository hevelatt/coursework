<?xml version="1.0" encoding="UTF-8"?>

<?import fi.jyu.mit.fxgui.ComboBoxChooser?>
<?import fi.jyu.mit.fxgui.StringGrid?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fxTilaajat.TilaajatGUIController">
	<top>
		<ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
			<content>
				<BorderPane>
					<top>
						<MenuBar BorderPane.alignment="CENTER">
							<menus>
								<Menu text="_Tiedosto">
									<items>
										<MenuItem onAction="#handleTallenna" text="_Tallenna">
											<accelerator>
												<KeyCodeCombination alt="UP" code="S"
													control="DOWN" meta="UP" shift="UP" shortcut="UP" />
											</accelerator>
										</MenuItem>
										<MenuItem onAction="#handleAvaa" text="_Avaa..." />
										<MenuItem onAction="#handleTulosta"
											text="T_ulosta..." />
										<MenuItem onAction="#handleLopeta" text="_Lopeta">
											<accelerator>
												<KeyCodeCombination alt="UP" code="Q"
													control="DOWN" meta="UP" shift="UP" shortcut="UP" />
											</accelerator>
										</MenuItem>
									</items>
								</Menu>
								<Menu text="_Muokkaa">
									<items>
										<MenuItem onAction="#handleUusiTilaaja"
											text="Lisää _uusi tilaaja...">
											<accelerator>
												<KeyCodeCombination alt="UP" code="N"
													control="DOWN" meta="UP" shift="UP" shortcut="UP" />
											</accelerator>
										</MenuItem>
										<MenuItem onAction="#handlePoistaTilaaja"
											text="_Poista tilaaja..." />
										<MenuItem onAction="#handleMuokkaaTilaajaa"
											text="_Muokkaa tilaajaa..." />
									</items>
								</Menu>
								<Menu text="_Apua">
									<items>
										<MenuItem onAction="#handleApua" text="_Apua" />
										<MenuItem onAction="#handleTietoja"
											text="_Tietoja..." />
									</items>
								</Menu>
							</menus>
						</MenuBar>
					</top>
					<left>
						<HBox alignment="BOTTOM_LEFT" BorderPane.alignment="CENTER">
							<children>
								<VBox prefWidth="150.0">
									<children>
										<Label text="Hakuehto" />
										<TextField fx:id="hakuehto" onKeyReleased="#handleHakuehto">
											<tooltip>
												<Tooltip text="Kirjoita hakuehto" />
											</tooltip>
										</TextField>
										<ComboBoxChooser fx:id="cbKentat" prefWidth="150.0" onAction="#handleHakuehto">
											<tooltip>
												<Tooltip text="Valitse hakuehto" />
											</tooltip>
										</ComboBoxChooser>
									</children>
									<HBox.margin>
										<Insets right="20.0" />
									</HBox.margin>
								</VBox>
								<Button mnemonicParsing="false" onAction="#handleTulosta"
									text="Tulosta">
									<tooltip>
										<Tooltip text="Avaa tulostusvalintaikkunan" />
									</tooltip>
								</Button>
							</children>
							<BorderPane.margin>
								<Insets bottom="5.0" left="5.0" top="5.0" />
							</BorderPane.margin>
						</HBox>
					</left>
					<right>
						<HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
							<children>
								<Button mnemonicParsing="false"
									onAction="#handleUusiTilaaja" text="Uusi tilaaja">
									<tooltip>
										<Tooltip text="Avaa tilaajanlisäys-ikkuna" />
									</tooltip>
									<HBox.margin>
										<Insets right="20.0" />
									</HBox.margin>
								</Button>
								<Button mnemonicParsing="false"
									onAction="#handleTallenna" text="Tallenna">
									<tooltip>
										<Tooltip text="Tallenna tiedosto" />
									</tooltip>
									<HBox.margin>
										<Insets right="20.0" />
									</HBox.margin>
								</Button>
							</children>
							<BorderPane.margin>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</BorderPane.margin>
						</HBox>
					</right>
					<bottom>
						<Label text="Tilaajat" BorderPane.alignment="BOTTOM_LEFT">
							<BorderPane.margin>
								<Insets left="5.0" right="5.0" top="5.0" />
							</BorderPane.margin>
						</Label>
					</bottom>
				</BorderPane>
			</content>
		</ScrollPane>
	</top>
	<center>
		<StringGrid fx:id="tableTilaajat" prefHeight="265.0">
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" />
			</BorderPane.margin>
		</StringGrid>
	</center>
</BorderPane>
